@model List<CSharp_Blog.Models.Tag>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h2>All Tags - @Html.ActionLink("Create", "Create", "Tag", null, new { @class = "btn btn-warning" })</h2>
        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td>@tag.Id</td>
                            <td>@tag.Name</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Tag", new { @id = tag.Id }, null)
                                @Html.ActionLink("Delete", "Delete", "Tag", new { @id = tag.Id }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>